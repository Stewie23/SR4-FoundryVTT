<section class="tab hide-overflow{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="fill-container">
        {{> 'systems/sr4/dist/templates/v2/actor/parts/attributes.hbs' rootId=rootId }}
        <div class="split-container">
            <div>
                {{> 'systems/sr4/dist/templates/v2/actor/parts/active-skills.hbs' rootId=rootId }}
            </div>
            {{#if (or @root.isEditMode hasLanguageKnowledgeSkills)}}
                <div>
                    {{> 'systems/sr4/dist/templates/v2/actor/parts/language-and-knowledge-skills.hbs' rootId=rootId }}
                </div>
            {{/if}}
        </div>
    </div>
</section>
